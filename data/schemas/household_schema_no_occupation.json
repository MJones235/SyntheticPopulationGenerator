{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "household_type": {
            "type": "string",
            "enum": [
                "One-person aged <66 years",
                "One-person aged 66+ years",
                "Lone parent",
                "Couple",
                "Couple with dependent children",
                "Couple with non-dependent children",
                "Other"
            ]
        },
        "household_size": { "type": "integer", "minimum": 1, "maximum": 8 },
        "household": {
            "type": "array",
            "minItems": 1,
            "maxItems": 8,
            "items": {
                "type": "object",
                "properties": {
                    "age": {"type": "integer", "minimum": 0, "maximum": 120},
                    "gender": {"type": "string", "enum": ["Male", "Female"]},
                    "relationship_to_head": {"type": "string", "enum": ["Head", "Partner", "Child", "Grandchild", "Parent", "Housemate", "Other"]}
                },
                "required": ["age", "gender", "relationship_to_head"],
                "additionalProperties": false
            }
        }
    },
    "required": ["household", "household_type", "household_size"],
    "additionalProperties": false
}
